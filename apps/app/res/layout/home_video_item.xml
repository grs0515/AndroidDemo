<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="30px"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="215px"
        android:layout_height="152px">

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="215px"
            android:layout_height="152px"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_loading" />

        <ImageView
            android:id="@+id/play_img"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="10px"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bf_icon"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/play_count"
            android:text="23次"
            android:textSize="16px"
            android:layout_toRightOf="@id/play_img"
            android:layout_marginBottom="14px"
            android:layout_marginLeft="5px"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
<!-- 底部title-->
    <TextView
        android:id="@+id/banner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:layout_marginBottom="25px"
        android:maxWidth="200px"
        android:singleLine="true"
        android:textStyle="bold"
        android:gravity="left"
        android:text=" "
        android:textColor="#565656"
        android:textSize="25px" />

    <TextView
        android:id="@+id/banner_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_img"
        android:layout_centerHorizontal="true"
        android:maxWidth="200px"
        android:singleLine="true"
        android:gravity="left"
        android:text="诗画青海"
        android:visibility="gone"
        android:textColor="#565656"
        android:textSize="22px" />
    </LinearLayout>
</LinearLayout>
